#! /bin/sh

log="info"
if test "${HSD_LOG_LEVEL}"; then log="${HSD_LOG_LEVEL}"; fi

exec /usr/local/hsd/bin/hsd \
	--chain-migrate=4 --wallet-migrate=7 \
	--prefix=/opt/hsd-data/ \
	--ns-host 0.0.0.0 --ns-port 153 \
	--rs-host 0.0.0.0 --rs-port 253 \
	--no-sig0 \
	--log-level=${log} 2>&1 | logger -t hsd
